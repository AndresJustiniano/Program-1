#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define max 100
using namespace std;
void cargar (double a[], int tam);
void mostrar(double a[], int tam);
void buscar(double a[], int tam);

void main()
{   
	double f,N[max];
	int n,opcion;
	float mayor=0,nmayor;
	do {
		
		cout << "=========================================================" << endl;
	    cout << "Ingrese la Cantidad de Elementos que almacenara el vector" << endl;
	    cin  >> n;

	}while(n<=0||n>max);
	    
	do {
	    cout << "=========================================================" << endl;
	    cout << "Menu de Algoritmo que halla el maximo valor de un vector." << endl;
	    cout << "1.- Cargar el vector" << endl;
	    cout << "2.- Mostrar el vector " << endl;
	    cout << "3.- Hallar el Maximo valor del vector " << endl;
	    cout << "0.- Salir" << endl;
	    cout << "=========================================================" << endl;
		cout << "Ingrese la opcion: ";
		cin  >> opcion;
		switch (opcion)
		{
		case 1: 
			{
				cargar (N,n);
				break;
			}
		
		case 2:
			{
				mostrar (N,n);
		        break;
			}
		
		case 3:
			{
				buscar (N,n);
				break;
			}
		case 0:
			{
				cout << " Salir " << endl;
				break;
			}
		default:
			{
				cout << " La opcion introducida es invalida " << endl;
				break;
			}
		}
	}while (opcion!=0);
	getch();
}

void cargar(double a[],int tam)
{
	cout << "Introduzca los datos del vector" << endl;
	for (int i=0;i<tam;i++)
	{
		cout << "a["<<i<<"]= ";
		cin  >> a[i];
	}
}

void mostrar(double a[],int tam)
{
	cout << "Valores del vector" << endl;
	for(int i=0;i<tam;i++)
	{
		cout << "a["<<i<<"]= " << a[i] << endl;
	}
}

void buscar (double a[],int tam)
{    
	cout << "Elemento Mayor del Vector" << endl;
	for(int i=0;i<tam;i++)
	{
		if (a[i]>mayor)
		{   
			mayor=a[i];
	    }	
    cout << "El elemento mayor del vector es :" << mayor << endl;
	}
}
